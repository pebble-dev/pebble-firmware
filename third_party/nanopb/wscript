def configure(conf):
    pass


def build(bld):
    nanopb_sources = [
        'nanopb/pb_common.c',
	'nanopb/pb_encode.c',
	'nanopb/pb_decode.c',
    ]

    nanopb_includes = [
        'nanopb',
    ]

    bld(export_includes=nanopb_includes, name='nanopb_includes')

    bld.stlib(source=nanopb_sources,
              includes=nanopb_includes,
              export_includes=nanopb_includes,
              target='nanopb',
              use=['pblibc'])
